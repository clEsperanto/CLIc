import argparse
import sys
from typing import List, Any
from pathlib import Path
import pyclic


def main(argv: List[Any]) -> int:

    parser = argparse.ArgumentParser()
    parser.add_argument("--cmakefiles", action='store_true', help="Print pyclic project CMake module directory. Useful for setting clic_ROOT in CMake.")
    parser.add_argument("--prefix", action='store_true', help="Print pyclic package installation prefix. Useful for setting CMAKE_PREFIX_PATH in CMake.")

    args = parser.parse_args(args=argv[1:])

    if not argv[1:]:
        parser.print_help()
        return

    prefix = Path(pyclic.__file__).parent

    if args.cmakefiles:
        print(prefix / "@PYCLIC_CMAKE_PACKAGE_INSTALL_SUBDIR@")

    if args.prefix:
        print(prefix)


if __name__ == "__main__":
    sys.exit(main(sys.argv))
